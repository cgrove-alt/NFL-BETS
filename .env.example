# NFL Betting Prediction System - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: The Odds API
# =============================================================================
# Sign up at https://the-odds-api.com/ to get your API key
# Free tier: 500 credits/month
ODDS_API_KEY=your_odds_api_key_here

# =============================================================================
# DATABASE
# =============================================================================
# SQLite for local development, PostgreSQL for production
DATABASE_URL=sqlite:///nfl_bets.db
# DATABASE_URL=postgresql://user:password@localhost:5432/nfl_bets

# =============================================================================
# REDIS (Optional - for caching in production)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# BANKROLL & BETTING SETTINGS
# =============================================================================
INITIAL_BANKROLL=1000.00

# Value detection thresholds
MIN_EDGE_THRESHOLD=0.03
MIN_CONFIDENCE_THRESHOLD=0.55

# Kelly Criterion settings
KELLY_MULTIPLIER=0.25
MAX_STAKE_PERCENT=0.05

# =============================================================================
# NOTIFICATIONS - Console & Desktop (Default - no config needed)
# =============================================================================
NOTIFICATIONS_CONSOLE_ENABLED=true
NOTIFICATIONS_DESKTOP_ENABLED=true

# =============================================================================
# NOTIFICATIONS - Discord (Optional)
# =============================================================================
# Create a webhook in your Discord channel settings
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...
NOTIFICATIONS_DISCORD_ENABLED=false

# =============================================================================
# NOTIFICATIONS - Telegram (Optional)
# =============================================================================
# Create a bot via @BotFather, get your chat_id by messaging the bot
# TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here
NOTIFICATIONS_TELEGRAM_ENABLED=false

# =============================================================================
# NOTIFICATIONS - SMS via Twilio (Optional)
# =============================================================================
# Sign up at https://www.twilio.com/
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_FROM_NUMBER=+1234567890
# TWILIO_TO_NUMBER=+1234567890
NOTIFICATIONS_SMS_ENABLED=false

# =============================================================================
# PREMIUM DATA SOURCES (Optional but recommended)
# =============================================================================

# PFF (Pro Football Focus)
# Contact b2b@pff.com for API access
# PFF_API_KEY=your_pff_api_key_here
PFF_ENABLED=false

# FTN / DVOA Data
# Subscribe at ftnfantasy.com/data
# For CSV upload mode, place files in data/external/ftn/
# FTN_API_KEY=your_ftn_api_key_here
FTN_ENABLED=false
FTN_CSV_PATH=data/external/ftn/

# SIC Score (Sports Injury Central)
# Subscribe at sicscore.com
# SIC_API_KEY=your_sic_api_key_here
SIC_SCORE_ENABLED=false

# =============================================================================
# SCHEDULER SETTINGS
# =============================================================================
# Odds polling interval in minutes (during active hours)
ODDS_POLL_INTERVAL_MINUTES=2

# Active hours for polling (24-hour format)
ACTIVE_HOURS_START=8
ACTIVE_HOURS_END=23

# Model refresh hour (24-hour format)
MODEL_REFRESH_HOUR=6

# nflfastR sync hour (24-hour format)
NFLFASTR_SYNC_HOUR=3

# =============================================================================
# DASHBOARD SETTINGS
# =============================================================================
# Options: "terminal", "web", "both"
DASHBOARD_MODE=terminal

# Streamlit web dashboard port
WEB_DASHBOARD_PORT=8501

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/nfl_bets.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
